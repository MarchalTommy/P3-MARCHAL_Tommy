<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="8dp"
            android:paddingRight="12dp"
            android:src="@drawable/baseline_place_black_24"
            android:tint="@color/colorAccent"
            app:layout_anchor="@id/neighbourLocation"
            app:layout_anchorGravity="start|bottom" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="8dp"
            android:paddingRight="12dp"
            android:tint="@color/colorAccent"
            app:layout_anchor="@id/neighbourPhone"
            app:layout_anchorGravity="start|bottom"
            app:srcCompat="@drawable/baseline_call_black_24" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="8dp"
            android:paddingRight="12dp"
            android:tint="@color/colorAccent"
            app:layout_anchor="@id/neighbourSocial"
            app:layout_anchorGravity="start|bottom"
            app:srcCompat="@drawable/baseline_language_black_24" />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
        android:id="@+id/neighbourName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/test_neighbour"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            />

        <View
            android:id="@+id/dividerTitle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="4dp"
            android:background="?android:attr/listDivider" />

        <TextView
        android:id="@+id/neighbourLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Boujailles Ã  6km"
        android:textSize="16sp"
        android:layout_marginLeft="48dp"
        />

        <View
            android:id="@+id/dividerPlace"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="48dp"/>

        <TextView
            android:id="@+id/neighbourPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_weight="2"
            android:text="+33 6 21 26 88 87"
            android:textSize="16sp" />

        <View
            android:id="@+id/dividerPhone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="48dp"/>

        <TextView
            android:id="@+id/neighbourSocial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="3"
            android:text="www.facebook.com/testNeighbour"
            android:textSize="16sp" />

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
</android.support.v7.widget.CardView>